<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/left1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/left2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/left1"
        app:layout_constraintLeft_toLeftOf="@id/left1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/left3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/left2"
        app:layout_constraintLeft_toLeftOf="@id/left2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/left4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/left3"
        app:layout_constraintLeft_toLeftOf="@id/left3"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/left5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="-120dp"
        android:background="@drawable/circle"
        app:layout_constraintRight_toRightOf="@id/left4"
        app:layout_constraintTop_toTopOf="@id/left4"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/right1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/left2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/right2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/right1"
        app:layout_constraintRight_toRightOf="@id/right1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/right3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/right2"
        app:layout_constraintRight_toRightOf="@id/right2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/right4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/right3"
        app:layout_constraintRight_toRightOf="@id/right3"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Note_to_be_played"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:text="A"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@id/left4"
        app:layout_constraintLeft_toLeftOf="@id/left4" />



</androidx.constraintlayout.widget.ConstraintLayout>