<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/shark"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Baby Shark"
            android:textSize="24sp"
            android:onClick="babyShark"/>

        <Button
            android:id="@+id/sleep"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Gently Sleep"
            android:textSize="24sp"
            android:onClick="gentlySleep"/>

        <Button
            android:id="@+id/buns"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Hot Cross Buns"
            android:textSize="24sp"
            android:onClick="hotCrossBuns"/>

        <Button
            android:id="@+id/star"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Twinkle Twinkle Little Star"
            android:textSize="24sp"
            android:onClick="twinkle"/>

        <Button
            android:id="@+id/lamb"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Mary Had a Little Lamb"
            android:textSize="24sp"
            android:onClick="maryLamb"/>

    </LinearLayout>

</LinearLayout>